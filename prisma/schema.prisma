generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Bird {
  id          String   @id @default(cuid())
  name        String
  id_specie   String
  id_family   String
  id_habitat  String
  audio_url   String?
  photo       String
  description String
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  specie      Specie   @relation(fields: [id_specie], references: [id])
  family      Family   @relation(fields: [id_family], references: [id])
  habitat     Habitat  @relation(fields: [id_habitat], references: [id])

  @@index([status])
}

model Specie {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Bird        Bird[]

  @@index([status])
}

model Family {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Bird        Bird[]

  @@index([status])
}

model Habitat {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Bird        Bird[]

  @@index([status])
}
